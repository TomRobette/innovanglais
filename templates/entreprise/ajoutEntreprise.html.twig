{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Ajout Entreprise
{% endblock %}

{% block body %}
	{{parent()}}
	<div class="container">
		<div class="row justify-content-center">
			<h1 class="text-center text-primary p-4">Ajout d'une entreprise
			</h1>
		</div>
		<div class="row justify-content-center">
			<div class="col-12 bg-white p-4 m-0 text-primary">
				{{ form_start(form) }}
				<div class="form-group">
					{{ form_label(form.libelle, 'Nom : ', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.raisonSociale, 'Raison sociale : ', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.raisonSociale, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.adrVille, 'Ville : ', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.adrVille, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.adrCp, 'Code postal : ', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.adrCp, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.adrRue, 'Rue : ', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.adrRue, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.adrNo, 'Num√©ro : ', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.adrNo, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group mx-auto text-center">
					{{ form_widget(form.ajouter, { 'label': "Ajouter", 'attr': {'class': 'btn font-weight-bold bg-primary text-white mx-auto text-center'}}) }}
				</div>
			</div>
		</div>
	</div>

	{{form_end(form) }}


{% endblock %}
