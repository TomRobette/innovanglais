{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} - liste theme{% endblock %}

{% block content %} 
<div class="container-fluid">           
    <div class="row justify-content-center">            
        <h1 class="text-center text-primary p-4">Liste des themes</h1>        
    </div>        
    <div class="row justify-content-center">            
    <div class="col-8 bg-white p-4 m-0 text-dark"> 
    <table class="table table-hover">
    <thead>
        <tr>
        <th scope="col">N°</th>
        <th scope="col">Libelle</th>
        </tr>
    </thead>
    <tbody>
      
        {% for theme in theme %}
            <tr class="{{ cycle(['table-info', 'table-light'], loop.index0)}}">

                <td>{{theme.id}}</td>
                <td>{{theme.libelle}}</td>
                <td><a href="{{path('modifTheme',{'id':theme.id})}}"><span class="material-icons text-dark" title="Modifier le thème">create</span></a><a href="{{path('listeTheme',{'supp':theme.id})}}"><span class="material-icons text-dark" title="Supprimer le thème">delete</span></a></td>
            
            </tr>
        {% endfor %} 
    </tbody>
                                  
    </div>        
</div></div>    
{% endblock %}