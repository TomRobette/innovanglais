{% extends 'base.html.twig' %}

{% block title %}{{parent()}}ModifUtilisateur{% endblock %}

{% block content %}
<div class="container-fluid">           
    <div class="row justify-content-center">            
        <h1 class="text-center text-primary p-4">Modif des utilisateurs</h1>        
    </div>        
    <div class="row justify-content-center">            
        <div class="col-8 bg-white p-4 m-0 text-dark">                
    {{ form_start(form) }}
                <div class="form-group">                    
                    {{ form_label(form.email, 'Email (*) ', {'label_attr': {'class': 'font-weight-bold'}}) }}                    
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}                
                </div>
                <div class="form-group">                    
                    {{ form_label(form.password, 'Mot de passe (*) ', {'label_attr': {'class': 'font-weight-bold'}}) }}                    
                    {{ form_widget(form.password) }}                
                </div>
                <div class="form-group">                    
                    {{ form_label(form.confirmation, 'Confirmation (*) ', {'label_attr': {'class': 'font-weight-bold'}}) }}                    
                    {{ form_widget(form.confirmation) }}                
                </div>
                <div class="form-group">                    
                    {{ form_label(form.entreprise, 'entreprise (*) ', {'label_attr': {'class': 'font-weight-bold'}}) }}                    
                    {{ form_widget(form.entreprise) }}                
                </div>
                <div class="form-group">                    
                    {{ form_label(form.abonnement, 'abonnement (*) ', {'label_attr': {'class': 'font-weight-bold'}}) }}                    
                    {{ form_widget(form.abonnement) }}                
                </div>
                <div class="form-group mx-auto text-center">                    
                {{ form_widget(form.send, { 'label': "Modifier", 'attr': {'class': 'btn font-weight-bold bg-primary text-white mx-auto text-center'}}) }}                
            </div>                                
        {{ form_end(form) }}                
    </div>        
</div></div>    
{% endblock %}
