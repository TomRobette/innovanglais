{% extends 'base.html.twig' %}

{% block title %}{{parent()}}modif Test{% endblock %}

{% block content %}
{{parent()}}
<div class="container-fluid">           
    <div class="row justify-content-center">            
        <h1 class="text-center text-primary p-4">Modifier un test</h1>        
    </div>        
    
    <div class="row justify-content-center">            
        <div class="col-8 bg-white p-4 m-0 text-primary">                
            {{form_start(form)}}
                <div class="col-12 bg-white p-4 m-0 text-primary">
				{{ form_start(form) }}
                <div class="form-group">
					{{ form_label(form.nbQuestions, 'Nombre de question : ', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.nbQuestions, {'attr': {'class': 'form-control'}}) }}
				</div>
                <div class="form-group">
					{{ form_label(form.niveau, 'Niveau : ', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.niveau, {'attr': {'class': 'form-control'}}) }}
				</div>
                <div class="form-group">
					{{ form_label(form.liste, 'Liste : ', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.liste, {'attr': {'class': 'form-control'}}) }}
				</div>
            
				<div class="form-group mx-auto text-center">
					{{ form_widget(form.send, { 'label': "Modifier", 'attr': {'class': 'btn font-weight-bold bg-primary text-white mx-auto text-center'}}) }}
				</div>            
            {{form_end(form)}}                
        </div>        
    </div>
</div>
{% endblock %}
{% block javascripts %}{{parent()}}{% endblock %}