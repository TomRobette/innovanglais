{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}AjoutListe
{% endblock %}

{% block content %}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<h1 class="text-center text-primary p-4">Ajout des Listes</h1>
		</div>
		<div class="row justify-content-center">
			<div class="col-8 bg-white p-4 m-0 text-dark">
				{{ form_start(form) }}
				<div class="form-group">
					{{ form_label(form.nom, 'Nom : ', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.idEntreprise, 'Entreprise (*) ', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.idEntreprise) }}
				</div>
				<div class="form-group">
					{{ form_label(form.theme, 'Theme (*) ', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.theme) }}
				</div>
				<div>
					<ul id="email-fields-list" data-prototype="{{ form_widget(form.emails.vars.prototype)|e }}" data-widget-tags="{{ '<li></li>'|e }}" data-widget-counter="{{ form.emails|length }}">
						{% for mot in form.listeMots %}
							<li>
								{{ form_errors(mot) }}
								{{ form_widget(mot) }}
							</li>
						{% endfor %}
					</ul>
				</div>
				<div class="form-group mx-auto text-center">
					{{ form_widget(form.ajouter, { 'label': "Envoyer", 'attr': {'class': 'btn font-weight-bold bg-primary text-white mx-auto text-center'}}) }}
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
