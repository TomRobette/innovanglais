{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Ajout Vocabulaire{% endblock %}

{% block content %}
{{parent()}}
<div class="container-fluid">           
    <div class="row justify-content-center">            
        <h1 class="text-center text-primary p-4">Ajouter un vocabulaire</h1>        
    </div>        
    
    <div class="row justify-content-center">            
        <div class="col-8 bg-white p-4 m-0 text-primary">                
            {{form_start(form)}}
                <div class="form-group">                    
                    {{ form_label(form.mot, 'Mot ', {'label_attr': {'class': 'font-weight-bold'}}) }}                    
                    {{ form_widget(form.mot, {'attr': {'class': 'form-control'}}) }}                
                </div>
                <div class="form-group">                    
                    {{ form_label(form.categorie, 'Cat√©gorie (*) ', {'label_attr': {'class': 'font-weight-bold'}}) }}                    
                    {{ form_widget(form.categorie) }}                
                </div>
                <div class="form-group">                    
                    {{ form_label(form.lang, 'Langue (*) ', {'label_attr': {'class': 'font-weight-bold'}}) }}                    
                    {{ form_widget(form.lang) }}                
                </div>              
                <div class="form-group mx-auto text-center">                    
                    {{ form_widget(form.ajouter, { 'label': "Ajouter", 'attr': {'class': 'btn font-weight-bold bg-primary text-white mx-auto text-center'}}) }}                
                </div>                  
            {{form_end(form)}}                
        </div>        
    </div>
</div>
{% endblock %}
{% block javascripts %}{{parent()}}{% endblock %}
